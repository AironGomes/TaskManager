<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.airongomes.listadetarefas.detail.DetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/edit_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        tools:context=".detail.DetailFragment">

        <ImageView
            android:id="@+id/edit_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:setPriorityImage="@{viewModel.task.priority}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/priority_icon_high" />

        <ImageView
            android:id="@+id/editable_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> viewModel.editTask()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/editable_icon" />

        <ImageView
            android:id="@+id/save_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> viewModel.updateTask(editConstraintLayout)}"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/save_icon" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_priority">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:inputType="text"
                android:singleLine="true"
                android:hint="Título"
                app:titleDetail="@{viewModel.task}"
                tools:text="Título" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_title">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="3"
                android:gravity="top"
                android:maxLines="3"
                android:enabled="false"
                android:hint="Descrição"
                app:descriptionDetail="@{viewModel.task}"
                tools:text="Descrição" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/button_setDate"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/contDenc_buttonDefineDate"
            android:enabled="false"
            android:textSize="16sp"
            app:buttonSetDate="@{viewModel.dateTask}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_description"
            tools:text="DEFINIR DATA" />

        <Button
            android:id="@+id/button_setTime"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            android:enabled="false"
            app:buttonSetTime="@{viewModel.timeTask}"
            app:layout_constraintBaseline_toBaselineOf="@+id/button_setDate"
            app:layout_constraintStart_toEndOf="@+id/button_setDate"
            tools:text="DEFINIR HORA" />

        <CheckBox
            android:id="@+id/checkbox_todoODia"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Todo o dia"
            android:checked="@{viewModel.allDay}"
            android:enabled="false"
            app:layout_constraintBottom_toBottomOf="@+id/button_setTime"
            app:layout_constraintStart_toEndOf="@+id/button_setTime"
            app:layout_constraintTop_toTopOf="@+id/button_setTime" />

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:contentDescription="@string/contDesc_button_cancel"
            android:text="@string/button_cancel"
            android:textSize="16sp"
            android:onClick="@{() -> viewModel.closeDetailFragment()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"/>

        <Button
            android:id="@+id/button_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:contentDescription="@string/contDesc_button_cancel"
            android:onClick="@{() -> viewModel.deleteTask()}"
            android:text="@string/button_delete"
            android:textSize="16sp"
            app:backgroundTint="@color/secondaryColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>