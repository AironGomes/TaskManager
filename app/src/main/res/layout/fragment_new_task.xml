<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.airongomes.listadetarefas.newTask.NewTaskViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/lb_newTask"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:textAlignment="center"
            android:textSize="24sp"
            android:text="@string/lb_title_newTask"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_title"
            android:layout_marginTop="8dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lb_newTask">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_title">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_description"
                android:lines="3"
                android:maxLines="3"
                android:gravity="top"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/lb_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/lb_priority"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_description" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:spinnerMode="dropdown"
            app:layout_constraintBaseline_toBaselineOf="@+id/lb_priority"
            app:layout_constraintStart_toEndOf="@+id/icon_priorityTask"
            tools:listitem="@android:layout/simple_list_item_1" />

        <ImageView
            android:id="@+id/icon_priorityTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/lb_priority"
            app:layout_constraintStart_toEndOf="@+id/lb_priority"
            app:layout_constraintTop_toTopOf="@+id/lb_priority"
            app:setPriorityImage="@{viewModel.priorityValue}"
            tools:srcCompat="@drawable/priority_icon_medium" />


        <Button
            android:id="@+id/button_setDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/contDenc_buttonDefineDate"
            android:textSize="16sp"
            app:buttonSetDate="@{viewModel.dateTask}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lb_priority"
            tools:text="@string/button_defineDate"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

        <Button
            android:id="@+id/button_setTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            android:textColor="@color/secondaryColor"
            app:buttonSetTime="@{viewModel.timeTask}"
            app:layout_constraintBaseline_toBaselineOf="@+id/button_setDate"
            app:layout_constraintStart_toEndOf="@+id/button_setDate"
            tools:text="HORA"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

        <Button
            android:id="@+id/button_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:contentDescription="@string/contDesc_buttonOk"
            android:onClick="@{() -> viewModel.saveTask(constraintLayout)}"
            android:text="@string/button_ok"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/contDesc_button_cancel"
            android:onClick="@{() -> viewModel.cancelTask()}"
            android:text="@string/button_cancel"
            android:textColor="@color/secondaryColor"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button_ok"
            app:layout_constraintStart_toEndOf="@+id/button_ok"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>